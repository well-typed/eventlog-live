# syntax=docker/dockerfile:1.7-labs

# To build this image, run:
# docker build --tag well-typed/eventlog-live-influxdb:0.1.0.0 --file ./dockerfiles/Dockerfile.eventlog-live-influxdb .

# Use the Haskell image with GHC 9.10.1
# See: https://hub.docker.com/_/haskell
FROM haskell:9.10-slim-bullseye AS build

# Copy required packages to container
WORKDIR "/eventlog-live"
COPY --parents \
  "./eventlog-live-influxdb/" \
  "./eventlog-live/" \
  "/eventlog-live/"

# Create cabal.project file
COPY <<EOF /eventlog-live/cabal.project
packages: eventlog-live
packages: eventlog-live-influxdb
EOF

# Build eventlog-live-influxdb
RUN <<EOF
cabal update
mkdir "/eventlog-live/bin"
cabal install \
    --overwrite-policy=always \
    --install-method=copy \
    --installdir="/eventlog-live/bin" \
    eventlog-live-influxdb
EOF

# Copy eventlog-live-influxdb to output stage
FROM debian:bullseye-slim AS output
COPY --from=build "/eventlog-live/bin/eventlog-live-influxdb" "/bin/eventlog-live-influxdb"

# Run command
ENTRYPOINT ["/bin/eventlog-live-influxdb"]
